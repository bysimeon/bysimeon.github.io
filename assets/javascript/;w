//
var curr = 0;
var curr = localStorage.getItem('curr');
//
function darkMode() {
  
}

function darkMode() {
  document.documentElement.style.setProperty('--text-color', '#000');

  document.documentElement.style.setProperty('--background-color', '#fff');
  localStorage.setItem('textColor', backgrounds[curr%backgrounds.length][0]);
  localStorage.setItem('backgroundColor', backgrounds[curr%backgrounds.length][1]);
  curr++;
  localStorage.setItem('curr', curr);
}

window.onload = () => {
  document.body.style.background = localStorage.getItem('back1');
  document.body.style.background = localStorage.getItem('back2');
}
